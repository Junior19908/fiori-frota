        <ToolbarSpacer/>
      </Toolbar>
    </customHeader>
    <content>
      <Toolbar design="Auto">
        <Button id="btnDeleteSel" text="Excluir selecionadas" type="Reject" press="onDeleteSelected"/>
        <ToolbarSpacer/>
        <Button id="btnDeleteFilter" text="Excluir por filtro" type="Reject" press="onDeleteFilteredConfirm"/>
