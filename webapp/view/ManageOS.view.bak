        <Text text="{= ${os>/page/pageText} || 'PÇ­gina 1'}" class="sapUiTinyMarginBegin sapUiTinyMarginEnd"/>
        <Text text="{= ${os>/page/totalPages} ? ('de ' + ${os>/page/totalPages}) : '' }" class="sapUiTinyMarginEnd"/>
        <Button id="btnNext" text="Prï¿½ï¿½xima" type="Transparent" press="onNextPage" enabled="{= ${os>/page/hasNext} }"/>
        <ToolbarSpacer/>
